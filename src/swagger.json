{
  "openapi": "3.0.0",
  "info": {
    "title": "API para carteiras de clientes",
    "description": "Produto de teste comercial",
    "contact": {
      "name": "Isac Rodrigues",
      "email": "isacrodriguesdev@protonmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000/v1",
      "description": "API de teste"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Cadastro de usuário",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRequest"
              },
              "examples": {
                "user": {
                  "value": {
                    "username": "bob",
                    "email": "bob@gmail.com",
                    "password": "mysecuritypassword",
                    "apiKey": "9v2IXn0zBQrwduCQsSxCYqFo40FnQLc64DGki6QDFxqZI4m3UnoeaaFyySE9gh3b",
                    "apiSecret": "mGsxpwkFBA3XgQ33w8yzQam66ZavKCDPT7ZdRlPVqmjmD0buTiQyPNXTBQSk49Dz"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "User already exists"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "summary": "Obter um usuário que está autenticado",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "uuid": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "updatedAt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Login de usuário",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLoginRequest"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "bob@gmail.com",
                    "password": "mysecuritypassword"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "403": {
            "description": "Incorrect password"
          },
          "400": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/wallet": {
      "post": {
        "summary": "Criar carteira do usuário",
        "tags": [
          "Wallets"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WalletRequest"
              },
              "examples": {
                "wallet": {
                  "value": {
                    "balance": 10.50,
                    "asset": "USD"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/WalletResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "summary": "Obter todas as carteiras",
        "description": "Retornar carteiras com o saldo total acomulado em USD",
        "tags": [
          "Wallets"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "balance": { "type": "number" },
                    "wallets": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/WalletListResponse"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/binance/wallet": {
      "get": {
        "summary": "Obter todas as carteiras da corretora",
        "description": "Dados direto da corretora binance do usuário",
        "tags": [
          "Wallets"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BinanceWalletResponse"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserLoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "apiKey": {
            "type": "string"
          },
          "apiSecret": {
            "type": "string"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "user": {
            "properties": {
              "id": {
                "type": "number"
              },
              "uuid": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "createdAt": {
                "type": "string"
              }
            }
          },
          "token": {
            "type": "string"
          }
        }
      },
      "WalletRequest": {
        "type": "object",
        "properties": {
          "asset": {
            "type": "string"
          },
          "balance": {
            "type": "number"
          }
        }
      },
      "WalletResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "uuid": {
            "type": "string"
          },
          "userId": {
            "type": "number"
          },
          "asset": {
            "type": "string"
          },
          "balance": {
            "type": "number"
          },
          "createdAt": {
            "type": "string"
          }
        }
      },
      "WalletListResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "uuid": {
            "type": "string"
          },
          "userId": {
            "type": "number"
          },
          "asset": {
            "type": "string"
          },
          "balance": {
            "type": "number"
          },
          "createdAt": {
            "type": "string"
          }
        }
      },
      "BinanceWalletResponse": {
        "type": "object",
        "properties": {
          "asset": {
            "type": "string"
          },
          "balance": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}